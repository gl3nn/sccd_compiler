<?xml version="1.0" ?>
<diagram author="Glenn De Jonghe" name="Test Model">
    <description>
        Testing the object manager
    </description>
    <inport name="test_input" />
    <outport name="test_output" />
    <class name="Test1" default="true">
        <relationships>
            <association class="Test2" name="test2_association" />
        </relationships>
        <scxml initial="start">
            <state id="start">
                <transition port="test_input" event="create" target="../wait">
                    <raise target="object_manager" event="create_instance">
                        <parameter expr="'Test2'"/>
                        <parameter expr="SELF" />
                    </raise>
                    <raise port="test_output" event="request_send"/>
                </transition>
            </state>

            <state id="wait">
                <transition event="created_instance" target="../start">
                    <parameter name="reference" />
                    <parameter name="class_name" />
                    <assign ident="SELF.test2_association" expr="reference"/>
                    <raise port="test_output" event="associate_added"/>
                    <raise target="test2_association" event="hello" />
                </transition>
            </state>
        </scxml>
    </class>
    <class name="Test2" default="false">
        <scxml>
            <state id="start">
                <transition event="hello" target=".">
                    <raise port="test_output" event="second_working" />
                </transition>
            </state>
        </scxml>
    </class>
</diagram>
